# .env.example
# Скопируйте этот файл в .env и заполните своими значениями

# ============ Основные настройки ============
ENVIRONMENT=development  # development, testing, staging, production
BOT_MODE=paper          # monitor, paper, live
TRADING_MODE=futures    # spot, futures
DEBUG=true
PROJECT_NAME="Crypto Trading Bot"
VERSION=1.0.0

# ============ Binance API ============
API_BINANCE_API_KEY=your_api_key_here
API_BINANCE_API_SECRET=your_api_secret_here
API_TESTNET=true

# Для testnet используйте:
# https://testnet.binance.vision
# Для production:
# https://api.binance.com
API_REST_URL=https://testnet.binance.vision
API_WS_URL=wss://testnet.binance.vision

# Rate limits
API_REQUEST_WEIGHT_LIMIT=6000
API_ORDER_LIMIT=50

# ============ База данных ============
# PostgreSQL/TimescaleDB
DB_POSTGRES_HOST=localhost
DB_POSTGRES_PORT=5432
DB_POSTGRES_DB=trading_bot
DB_POSTGRES_USER=trader
DB_POSTGRES_PASSWORD=your_postgres_password

# Redis
DB_REDIS_HOST=localhost
DB_REDIS_PORT=6379
DB_REDIS_DB=0
# DB_REDIS_PASSWORD=your_redis_password  # Раскомментируйте если нужен пароль

# QuestDB (опционально для тиковых данных)
DB_QUESTDB_HOST=localhost
DB_QUESTDB_PORT=9009
DB_USE_QUESTDB=false

# ============ Торговые настройки ============
TRADING_INITIAL_CAPITAL=10000.0
TRADING_RISK_PER_TRADE=0.01  # 1% риск на сделку
TRADING_MAX_POSITIONS=5

# Лимиты позиций
TRADING_MIN_POSITION_SIZE_USDT=10.0
TRADING_MAX_POSITION_SIZE_PERCENT=0.25  # 25% от капитала

# Риск-менеджмент
TRADING_MAX_DAILY_LOSS_PERCENT=0.05  # 5%
TRADING_MAX_DRAWDOWN_PERCENT=0.20    # 20%
TRADING_STOP_LOSS_ATR_MULTIPLIER=2.5
TRADING_TAKE_PROFIT_RR_RATIO=2.0     # Risk:Reward 1:2

# Корреляция
TRADING_MAX_CORRELATION=0.7

# Таймфреймы (через запятую)
TRADING_TIMEFRAMES=["5m","15m","1h","4h"]
TRADING_PRIMARY_TIMEFRAME=15m

# Торговые пары (через запятую)
TRADING_SYMBOLS=["BTCUSDT","ETHUSDT","BNBUSDT","ADAUSDT","SOLUSDT","DOTUSDT"]

# ============ Машинное обучение ============
ML_USE_XGBOOST=true
ML_USE_LIGHTGBM=true
ML_ENSEMBLE_METHOD=voting  # voting, stacking

# Параметры обучения
ML_RETRAIN_INTERVAL_HOURS=2
ML_MIN_TRAINING_SAMPLES=1000
ML_VALIDATION_SPLIT=0.2

# Online learning
ML_ENABLE_ONLINE_LEARNING=true
ML_ONLINE_BATCH_SIZE=50
ML_ONLINE_UPDATE_FREQUENCY=300  # секунд

# Feature engineering
ML_NUM_FEATURES=3266
ML_FEATURE_SELECTION_METHOD=importance  # importance, pca, mutual_info

# Пороги
ML_MIN_CONFIDENCE_THRESHOLD=0.65
ML_MIN_WIN_PROBABILITY=0.55

# ============ Сигналы ============
# RSI
SIGNAL_RSI_PERIOD=7
SIGNAL_RSI_OVERSOLD=35.0
SIGNAL_RSI_OVERBOUGHT=65.0

# MACD (Linda Raschke settings)
SIGNAL_MACD_FAST=3
SIGNAL_MACD_SLOW=10
SIGNAL_MACD_SIGNAL=16

# Bollinger Bands
SIGNAL_BB_PERIOD=20
SIGNAL_BB_STD=2.0

# Volume
SIGNAL_MIN_VOLUME_RATIO=1.5

# Фильтры
SIGNAL_MIN_RR_RATIO=1.5